# Stripe API Keys
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE

# Stripe Webhook Secret
# Get this from your Stripe Dashboard: https://dashboard.stripe.com/webhooks
# For local development, use Stripe CLI: stripe listen --forward-to localhost:3000/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET_HERE

# Store Configuration
# Use http://localhost:3000 for development, your production domain for live site
NEXT_PUBLIC_STORE_DOMAIN="http://localhost:3000"

# Product Details
# Create a product in Stripe Dashboard and get the price ID
NEXT_PUBLIC_PRODUCT_NAME="Awesome Gadget"
NEXT_PUBLIC_PRODUCT_PRICE_ID="price_YOUR_STRIPE_PRICE_ID_HERE"
NEXT_PUBLIC_PRODUCT_IMAGE_URL="/item1.jpg"
NEXT_PUBLIC_PRODUCT_DESCRIPTION="This is the most awesome gadget you will ever own!"
NEXT_PUBLIC_CURRENCY="USD"

# Email Service (Resend)
# Sign up at https://resend.com and get your API key
RESEND_API_KEY="re_YOUR_RESEND_API_KEY_HERE"
SENDER_EMAIL_ADDRESS="your-store-email@example.com" 